# ========================================
# AI Music Pro - 环境配置
# ========================================

# ----------------------------------------
# Suno API 配置 (音乐生成)
# ----------------------------------------
SUNO_API_URL=https://api.suno.cn
SUNO_ACCESS_KEY=your_suno_access_key

# ----------------------------------------
# 智谱GLM API 配置 (外网LLM服务)
# 文档: https://open.bigmodel.cn/dev/api
# ----------------------------------------
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4
GLM_AUTHORIZATION=your_glm_authorization_token
GLM_MODEL=glm-5
GLM_MODEL_FAST=glm-4-flash

# ----------------------------------------
# JoyBuilder API 配置 (京东内网LLM服务)
# 文档: https://joyspace.jd.com/teams/UANJsSBkTLfumcnaR0WYk/root
# ----------------------------------------
JOYBUILDER_API_URL=https://api.joybuilder.jd.com/v1
JOYBUILDER_API_KEY=your_joybuilder_api_key

# JoyBuilder 模型配置 (可选，使用默认值)
# - DeepSeek-V3.2: 歌词生成（性价比最高）
# - JoyAI-flash: 快速歌词生成（京东内部）
# - Qwen3-8B: 风格分析和推荐
# - DeepSeek-R1-0528: 复杂创意歌词（深度思考）
JOYBUILDER_MODEL_LYRICS=deepseek-v3.2
JOYBUILDER_MODEL_STYLE=qwen3-8b
JOYBUILDER_MODEL_CREATIVE=deepseek-r1-0528
JOYBUILDER_MODEL_FAST=joyai-flash

# ----------------------------------------
# 网络环境
# - internal: 内网环境，优先使用JoyBuilder
# - external: 外网环境，使用GLM
# ----------------------------------------
NETWORK_ENV=external

# ----------------------------------------
# 应用配置
# ----------------------------------------
NODE_ENV=development
PORT=3000

# ----------------------------------------
# 日志配置
# ----------------------------------------
LOG_LEVEL=info

# ----------------------------------------
# Redis 配置 (可选，用于缓存和任务队列)
# ----------------------------------------
REDIS_URL=redis://localhost:6379
# 或者单独配置:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ----------------------------------------
# PostgreSQL 配置 (可选，用于数据持久化)
# 可以使用 DATABASE_URL 或单独配置
# ----------------------------------------
# DATABASE_URL=postgresql://user:password@localhost:5432/music_ai
# 或者:
# PG_HOST=localhost
# PG_PORT=5432
# PG_DATABASE=music_ai
# PG_USER=postgres
# PG_PASSWORD=your_password

# ----------------------------------------
# JWT 配置 (用户认证)
# ----------------------------------------
JWT_SECRET=your_jwt_secret_key_here
